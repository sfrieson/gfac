{
  "name": "gramforacause",
  "version": "0.0.0",
  "description": "The adminitistrative site for Gramforacause",
  "main": "index.js",
  "scripts": {
    "db": "babel-node ./server/db/tasks.js",
    "db:seed": "yarn db seed",
    "lint": "standard",
    "create": "babel-node ./.bin/create --",
    "node": "babel-node",
    "start": "NODE_ENV=heroku webpack -p && babel-node ./index.js",
    "start:prod": "NODE_ENV=production babel-node ./index.js",
    "build": "webpack -p",
    "prod": "yarn build && yarn start:prod",
    "dev": "NODE_ENV=development nodemon ./index.js --watch ./server --exec babel-node",
    "test": "NODE_ENV=test mocha --require babel-register  ./server/**/*.test.js ./server/**/**/*.test.js ./client/**/*.test.js"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "react",
      "stage-0"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "client-config": "./client-config.json",
            "common": "./client/components/common",
            "models": "./client/models",
            "utils": "./client/utils",
            "emitter": "./server/emitter.js"
          }
        }
      ]
    ]
  },
  "pre-commit": "lint",
  "author": "Steven Frieson",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "bootstrap": "^3.3.7",
    "config": "^1.26.1",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "elasticlunr": "^0.9.5",
    "express": "^4.15.3",
    "express-graphql": "^0.6.7",
    "express-jwt": "^5.3.0",
    "graphql": "^0.10.5",
    "jsonwebtoken": "^7.4.2",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "nodemailer": "^4.0.1",
    "pg": "6.1.5",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-ga": "^2.2.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.1.2",
    "redux": "^3.7.2",
    "sequelize": "4.2.0",
    "webpack-dev-middleware": "^1.12.0",
    "autoprefixer-loader": "^3.2.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "2.1.2",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "2.7.0"
  },
  "devDependencies": {
    "casual": "^1.5.14",
    "chai": "^4.1.1",
    "deep-freeze": "^0.0.1",
    "expect": "^1.20.2",
    "mocha": "^3.5.0",
    "pre-commit": "^1.2.2",
    "standard": "^10.0.2",
    "webpack-dev-server": "^2.6.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
