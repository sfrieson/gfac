{
  "app": {
    "url": "http://localhost:3000",
    "tokenLength": 25
  },
  "server": {
    "host": "[host]",
    "auth": {
      "jwtSecret": "[JWTSecret]",
      "salt": "[salt]"
    },
    "email": {
      "expiryMin": 15,
      "inviteWeeks": 2,
      "transporter": {
        "host": "[smtp.mail.com]",
        "port": "[port]",
        "secure": "[boolean]",
        "auth": {
          "user": "[email@me.com]",
          "pass": "[password]"
        }
      }
    }
  },
  "client": {
    "fieldsets": {
      "createProject": ["name", "description", "date", "dateIsApprox", "location", "photoLink"],
      "editContact": ["phoneSecondary", "phoneSecondaryType"],
      "editStoryteller": ["instagram", "cameraType", "cameraOther", "preferredContactMethod", "causes", "availabilities"],
      "editUser": ["email", "firstname", "lastname", "phone", "phoneType"],
      "login": ["email", "password"],
      "registerContact": ["nonprofitName", "nonprofitWebsite", "jobTitle", "locationPersonal"],
      "registerStoryteller": ["instagram", "cameraTypeRegistration", "location", "availabilities"],
      "registerUser": ["firstname", "lastname", "email", "password", "confirm"]
    },
    "fields": {
      "availabilities": {
        "label": "General Availability",
        "name": "availabilities",
        "inputType": "AvailabilityGroup"
      },
      "cameraOther": {
        "label": "Other",
        "name": "cameraOther",
        "type": "text"
      },
      "cameraFilm": {
        "label": "Film",
        "type": "checkbox",
        "name": "cameraFilm"
      },
      "cameraPhone": {
        "label": "Phone",
        "type": "checkbox",
        "name": "cameraPhone"
      },
      "cameraDSLR": {
        "label": "DSLR",
        "type": "checkbox",
        "name": "cameraDSLR"
      },
      "cameraType": {
        "label": "Camera Type",
        "inputType": "CameraTypeGroup",
        "options": [
          {"label": "Film", "name": "cameraFilm"},
          {"label": "Phone", "name": "cameraPhone"},
          {"label": "DSLR", "name": "cameraDSLR"}
        ]
      },
      "cameraTypeRegistration": {
        "label": "I generally shoot with...",
        "inputType": "CameraTypeGroup"
      },
      "causes": {
        "label": "Causes you're interested in (pick up to 5)",
        "name": "causes",
        "type": "checkboxes",
        "options": [
          {"value": 1, "label": "Adults with Special Needs"},
          {"value": 2, "label": "Education"},
          {"value": 3, "label": "Seniors"},
          {"value": 4, "label": "Career Prep"},
          {"value": 5, "label": "Health & Fitness"},
          {"value": 6, "label": "Animals & Environment"},
          {"value": 7, "label": "Hunger"},
          {"value": 8, "label": "Children with Special Needs"},
          {"value": 9, "label": "Disaster Response"}
        ]
      },
      "confirm": {
        "label": "Confirm Password",
        "name": "confirm",
        "type": "password"
      },
      "date": {
        "label": "Date",
        "name": "date",
        "type": "date"
      },
      "email": {
        "label": "Email",
        "name": "email",
        "type": "email"
      },
      "description": {
        "label": "Short Description",
        "name": "description",
        "type": "textarea"
      },
      "id": {
        "name": "id",
        "type": "hidden"
      },
      "dateIsApprox": {
        "label": "Date is approximate?",
        "name": "dateIsApprox",
        "type": "checkbox"
      },
      "firstname": {
        "label": "First Name",
        "name": "firstname",
        "type": "text"
      },
      "instagram": {
        "label": "Instagram Handle",
        "name": "instagram",
        "type": "text"
      },
      "jobTitle": {
        "label": "Your job title",
        "name": "jobTitle",
        "type": "text"
      },
      "lastname": {
        "label": "Last Name",
        "name": "lastname",
        "type": "text"
      },
      "location": {
        "label": "Location",
        "name": "location",
        "type": "text"
      },
      "locationPersonal": {
        "label": "City, State, Country",
        "name": "location",
        "type": "text"
      },
      "name": {
        "label": "Name",
        "name": "name",
        "type": "text"
      },
      "nonprofitName": {
        "label": "Organization name",
        "name": "nonprofitName",
        "type": "text"
      },
      "nonprofitWebsite": {
        "label": "Organization website",
        "name": "nonprofitWebsite",
        "type": "text"
      },
      "password": {
        "label": "Password",
        "name": "password",
        "type": "password"
      },
      "phone": {
        "label": "Phone Number",
        "name": "phone",
        "type": "tel"
      },
      "phoneSecondary": {
        "label": "Secondary Phone Number",
        "name": "phoneSecondary",
        "type": "tel"
      },
      "phoneSecondaryType": {
        "label": "Secondary Phone Type",
        "name": "phoneSecondaryType",
        "type": "radio",
        "options": [
          {"label": "Mobile", "value": "mobile"},
          {"label": "Office", "value": "office"}
        ]
      },
      "phoneType": {
        "label": "Phone Type",
        "name": "phoneType",
        "type": "radio",
        "options": [
          {"label": "Mobile", "value": "mobile"},
          {"label": "Office", "value": "office"}
        ]
      },
      "photoLink": {
        "label": "Link to Photo Folder",
        "name": "photoLink",
        "type": "text"
      },
      "preferredContactMethod": {
        "label": "Preferred Contact Method",
        "name": "preferredContactMethod",
        "type": "select",
        "options": [
          {"label": "Phone", "value": "phone"},
          {"label": "Instagram Direct Message", "value": "instagram"},
          {"label": "Email", "value": "email"}
        ]
      },
      "role": {
        "label": "User Type",
        "name": "role",
        "type": "select",
        "options": [
          {"label": "Storyteller", "value": "storyteller"},
          {"label": "Nonprofit Contact", "value": "contact"}
        ]
      }
    }
  }
}
